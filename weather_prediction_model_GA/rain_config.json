{
  "factor": "rain",
  "nc_path": "./data/rain.nc",
  "output_dir": "forecast_output",
  "lat_var": "lat",
  "lon_var": "lon",
  "time_var": "time",
  "input_resolution": 0.2,
  "output_resolution": 0.05,
  "bounds": { "south": -90, "west": -180 },
  "forecast_start": "2025-01-01",
  "forecast_end": "2025-12-31",
  "variables": {
    "rain": "precipitation"
  },
  "data_sampling": {
    "enabled": false,
    "fraction": 1.0
  },
  "ga": {
    "max_lag_days": 14,
    "population": 50,
    "generations": 30,
    "p_crossover": 0.8,
    "p_mutation": 0.15,
    "sample_cells_for_ga": 50000,
    "hyperparam_grid_scalar": {
      "n_estimators": [150, 250, 350],
      "max_depth": [5, 7, 9],
      "learning_rate": [0.05, 0.1]
    }
  },
  "sample_weighting": {
    "enabled": true,
    "positive_class_weight": 25
  }
}